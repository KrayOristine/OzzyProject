{
  "compilerOptions":{
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noErrorTruncation": true,
    "removeComments": true,
    "paths": {
      "@/*": ["./*"]
    }
  }
}
