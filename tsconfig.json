{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": ".",
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noErrorTruncation": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node10",
    "removeComments": true,
    "paths": {
      "@/*": ["./*"],
    },
    "plugins": [
      {
        "transform": "./compileScripts/transformer.ts",
        "mapDir": "./maps/map.w3x",
        "entryFile": "./src/game.ts",
        "outputDir": "./dist/map.w3x"
      }
    ],
    "types": [
      "@typescript-to-lua/language-extensions",
      "lua.d.ts",
      "common.j.d.ts",
      "helperType.d.ts",
      "hiddenNative.d.ts",
      "war3-transformer.d.ts",
      "war3map.d.ts",
    ],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "./types/**/*.d.ts"],
  "exclude": ["./test/**/*.ts"],
  "tstl": {
    "luaTarget": "5.3",
    "buildMode": "default",
    "luaBundleEntry": "./src/game.ts",
    "luaBundle": "./dist/tstl_output.lua",
    "noImplicitSelf": true,
    "noHeader": true,
    "luaLibImport": "require",
    "measurePerformance": true,
    "sourceMapTraceback": false,
    "tstlVerbose": false,
    "luaPlugins": [
      //TODO: Add constant folding
    ],
    "noResolvePaths": ["typescript", "typescript-to-lua"]
  },
  "ts-node": {
    "compiler": "ts-patch/compiler",
    "preferTsExts": true,
    "pretty": true,
    "transpileOnly": true
  }
}
